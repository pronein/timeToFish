<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

    <title><%= title %></title>
    <% for(var i= 0; i < styles.length; i++) { %>
    <link rel="stylesheet" href="<%= styles[i] %>" />
    <% } %>
    <base href="/">
  </head>
  <body ng-app="ttfApp" ng-controller="SessionController as session">
    <% include header %>

    <% include body %>

    <% include footer %>

    <% for(var i = 0; i < javascripts.length; i++) { %>
    <script type="text/javascript" src="<%= javascripts[i] %>"></script>
    <% } %>

    <% for(var i = 0; i < angularAppScripts.length; i++) { %>
    <script type="text/javascript" src="<%= angularAppScripts[i] %>"></script>
    <% } %>
  </body>
</html>
